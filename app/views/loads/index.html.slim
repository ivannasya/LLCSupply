p= link_to 'Orders', orders_path
= form_tag loads_path, method: :get do
  = select_tag(:orders_date, options_for_select(@orders_date, params[:orders_date]))
  = submit_tag "Show", class: "btn btn-success btn-sm"
= render 'loads/pre_show', loads: @loadM, shift: 'Morning'
= render 'loads/pre_show', loads: @loadN, shift: 'Afternoon'
= render 'loads/pre_show', loads: @loadE, shift: 'Evening'